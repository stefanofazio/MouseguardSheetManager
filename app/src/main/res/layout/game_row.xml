<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/burntPaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gameNameText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/masterNameText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameNameText"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/playerNumberText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/gameNameText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/masterNameText"
        android:gravity="right|center_vertical"
        />
</androidx.constraintlayout.widget.ConstraintLayout>